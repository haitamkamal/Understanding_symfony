{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}

{% block body %}
    <table>
        <thead>
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Password</th>
                <th>Size</th>
            </tr>
        </thead>
        <tbody>
            {% for produit in Produits %}
                <tr>
                    <td>
											<a href="{{ path('product_show', {'id':produit.id} ) }}" >
													{{ produit.usename }}
											</a>
										</td>
                    <td>{{ produit.email }}</td>
                    <td>{{ produit.password }}</td>
                    <td>{{ produit.size }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
